<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddContactDialogFragment">

        <!--전체 레이아웃-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--왼쪽 우측 아이콘-->
        <LinearLayout
            android:layout_marginTop="10dp"
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/personIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/addcontacts_iv_add"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>

        <!--원형뷰 레이아웃/-->
        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <!-- TODO: Update blank fragment layout -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cardImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:layout_weight="1"
                android:contentDescription="circleView"
                android:src="@drawable/tab_iv_mypage_fill"
                app:civ_border_color="@color/text"
                app:civ_border_width="6dp" />
        </LinearLayout>


        <!--이름입력-->
        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

            <EditText
                android:id="@+id/add_editName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="150dp"
                android:layout_marginRight="150dp"
                android:hint="Name"
                android:textAlignment="center"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="parent" />
        </LinearLayout>

        <!--textAddress-->
        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

            <EditText
                android:id="@+id/add_nickName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="150dp"
                android:layout_marginEnd="150dp"
                android:hint="NickName"
                android:textSize="13sp"
                android:textAlignment="center"
                android:textStyle="bold" />
        </LinearLayout>

        <!--Icon Mobile/input-->
        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="30dp"
                android:scaleType="centerInside"
                android:src="@drawable/mypage_iv_mobile" />

            <EditText
                android:id="@+id/add_mobileEdit"
                android:inputType="phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="80dp"
                android:hint="Mobile" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="30dp"
                android:scaleType="centerInside"
                android:src="@drawable/mypage_iv_specialist" />

            <EditText
                android:id="@+id/add_specialEdit"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="80dp"
                android:hint="Specialist" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout6">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="30dp"
                android:scaleType="centerInside"
                android:src="@drawable/mypage_iv_email" />

            <EditText
                android:id="@+id/add_mailEdit"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="80dp"
                android:hint="Mail" />
        </LinearLayout>


        <!--notification Btn-->
        <LinearLayout
            android:id="@+id/linearLayout8"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout7">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="30dp"
                android:scaleType="centerInside"
                android:src="@drawable/addcontacts_iv_alarm" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textSize="15sp"
                android:layout_gravity="center_vertical"
                android:text="Alarm"
                android:textStyle="bold"/>


        </LinearLayout>


        <!--offBtn-->
        <LinearLayout
            android:id="@+id/LinearLayout9"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical|center_horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout8">

            <Button
                android:id="@+id/add_noti_offBtn"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="OFF" />

            <Button
                android:id="@+id/add_noti_10Btn"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="10분뒤 알림"/>

            <Button
                android:id="@+id/add_noti_20Btn"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="20분뒤 알림"/>

        </LinearLayout>



        <!--save/cancel btn-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/LinearLayout9">

            <Button
                android:id="@+id/add_saveBtn"
                android:layout_width="120dp"
                android:layout_height="65dp"
                android:layout_marginStart="60dp"
                android:backgroundTint="@color/sub1"
                android:text="SAVE"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/add_cancelBtn"
                android:layout_width="120dp"
                android:layout_height="65dp"
                android:layout_marginStart="50dp"
                android:backgroundTint="@color/text"
                android:text="CANCEL"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>






    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>