<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".recyclerview_item_list">

    <TextView
        android:id="@+id/recyclerview_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="A"
        android:textStyle="bold"
        android:textColor="#BCB0B0"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.041"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/recyclerview_iv_profile"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/circleshape"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        android:src="@drawable/detail_iv_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.136"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerview_collection" />

    <ImageView
        android:id="@+id/recyclerview_iv_fave_fill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/contact_iv_fave_fill"
        app:layout_constraintEnd_toStartOf="@+id/recyclerview_iv_profile"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerview_collection" />

    <TextView
        android:id="@+id/recyclerview_speciallist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="abdeef University"
        android:textColor="#C9C0C0"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerview_name"
        app:layout_constraintEnd_toEndOf="@+id/recyclerview_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/recyclerview_name"
        app:layout_constraintTop_toTopOf="@+id/recyclerview_name"
        app:layout_constraintVertical_bias="0.838" />

    <TextView
        android:id="@+id/recyclerview_name"
        android:layout_width="138dp"
        android:layout_height="50dp"
        android:text="WooJaeHoon"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerview_iv_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toEndOf="@+id/recyclerview_iv_profile"
        app:layout_constraintTop_toTopOf="@+id/recyclerview_iv_profile"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>